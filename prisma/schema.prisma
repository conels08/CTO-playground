// This is the Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// User model - stores basic user information
model User {
  id               String    @id @default(cuid())
  email            String?   @unique
  passwordHash     String?
  sessionToken     String?   @unique
  sessionExpiresAt DateTime?
  createdAt        DateTime  @default(now())

  // Relations
  quitProfile QuitProfile?
  checkIns    DailyCheckIn[]
}

// QuitProfile model - stores smoking cessation data for each user
model QuitProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  quitDate          DateTime
  cigarettesPerDay  Int
  costPerPack       Float // Cost per pack in user's currency
  cigarettesPerPack Int      @default(20)
  personalGoal      String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// DailyCheckIn model - stores daily progress tracking
model DailyCheckIn {
  id               String   @id @default(cuid())
  userId           String
  date             DateTime
  cravingIntensity Int // 1-10 scale
  mood             String
  notes            String?
  createdAt        DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Ensure one check-in per user per day
  @@unique([userId, date])
}
